FROM tiangolo/uwsgi-nginx-flask:python3.7

COPY ./cert/cert.crt /etc/ssl/private/
COPY ./cert/key.crt /etc/ssl/private/
COPY ./cert/pass /etc/ssl/private/

COPY ./app /app

